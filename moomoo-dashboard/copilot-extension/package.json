{
  "name": "moomoo-climate-copilot",
  "displayName": "MooMoo Climate Copilot",
  "description": "Custom GitHub Copilot chat participant for climate tech dashboard development",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "moomoo.climate",
        "name": "climate",
        "description": "Climate tech dashboard development assistant specialized in React, Next.js, Supabase, and climate data visualization",
        "isSticky": true
      }
    ],
    "commands": [
      {
        "command": "moomoo.climate.explain",
        "title": "Explain Climate Tech Concept"
      },
      {
        "command": "moomoo.climate.createComponent",
        "title": "Create Climate Data Component"
      },
      {
        "command": "moomoo.climate.optimizeQuery", 
        "title": "Optimize Supabase Query"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@vscode/vscode-languagedetection": "^1.0.21"
  }
}
